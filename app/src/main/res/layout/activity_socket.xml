<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.wave_chtj.example.util.TopTitleView
        android:id="@+id/ttView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ivback="@mipmap/back"
        app:name="TCP/UDP通信" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_option"
                android:layout_width="wrap_content"
                android:theme="@style/life_spinner_style"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <EditText
                android:id="@+id/etIp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_style_stroke"
                android:hint="请输入ip地址"
                android:paddingLeft="10dp"
                android:text="192.168.1.226"
                android:textSize="@dimen/small_text_size" />

            <EditText
                android:id="@+id/etPort"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/button_style_stroke"
                android:hint="端口"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:text="8234"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="连接"
                android:textSize="@dimen/small_text_size" />

            <Button
                android:id="@+id/btnDisConnect"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="断开"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

        <EditText
            android:id="@+id/etSendContent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style_stroke"
            android:gravity="left|center"
            android:hint="发送的内容"
            android:paddingLeft="10dp"
            android:text="AABB"
            android:textSize="@dimen/small_text_size" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:text="send"
            android:textSize="@dimen/small_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="结果："
                android:textSize="@dimen/small_text_size" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="清空"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_style_stroke"
            android:gravity="left|top"
            android:scrollbars="vertical"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>
</LinearLayout>