<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.face_chtj.base_iotutils.view.TopTitleBar
        android:id="@+id/ctTopView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:centerText="定时器"
        app:leftText="&lt;&lt;"
        app:rightText=""
        app:leftBack="true"
        app:textSize="24sp" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ttView"
        android:layout_marginBottom="10dp"
        android:text="开始"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_below="@+id/ttView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btn_start"
        android:text="结束"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/ttView"
        android:layout_toRightOf="@+id/btn_finish"
        android:gravity="center"
        android:text="00:00"
        android:textSize="@dimen/small_text_size" />

    <Button

        android:id="@+id/btn_countdown"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_start"
        android:text="倒计时开始"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:id="@+id/btn_countdown_finish"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_start"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btn_start"
        android:text="结束"
        android:textSize="@dimen/small_text_size" />

    <EditText
        android:id="@+id/et_CountDownTime"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_start"
        android:layout_toRightOf="@+id/btn_finish"
        android:gravity="center"
        android:hint="填写秒"
        android:inputType="number"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tvCountdownResult"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/btn_start"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/et_CountDownTime"
        android:gravity="center"
        android:text="00:00"
        android:textSize="@dimen/small_text_size" />
</RelativeLayout>